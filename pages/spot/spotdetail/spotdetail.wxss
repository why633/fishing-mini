.article-box{
  align-items:center;
  justify-content:space-between;
  width:100%;
  overflow:hidden;
  flex-wrap:wrap;
}
.article-box .article-info{
  margin-bottom:24rpx;
}
.article-box .article-info image{
  width:100%;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.article-box .article-info .meta{
   border: 1px solid #E9EDF4;
    border-top: none;
    margin-top: -6px;
    padding: 7px;
    box-shadow: 0px 0.175em 0.5em #02080a14, 0px 0.085em 0.175em #02080a00;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}
.article-box .article-info .meta .title{
  font-size: 26rpx;
  margin:12rpx 0rpx;
}
.article-box .article-info .meta image{
  width: 40rpx;
  height:40rpx;
  margin-right:12rpx;
  border-radius:40rpx;
}
.article-box .article-info .meta .user-info{
  width:70%;
}
.article-box .article-info .meta text{
  font-size: 26rpx;
  max-width: 70%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}





