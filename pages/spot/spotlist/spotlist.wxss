.container{
  background: #eee;
}
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:70%;
  height:60rpx;
  background-color:#fff;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;

}

/* 搜索框提示文字样式 */
.search input
{
  font-size:27rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

/* 搜索框小图标 */
.search view image
{ 
  width:40rpx;
  height:40rpx;
  padding-right:20rpx;
}

.wrap{
  padding: 0 16rpx;
  background: #eee;
}
.spot-box {
  padding: 40rpx 20rpx;
  flex-wrap: nowrap;
  align-items: center;
  /* border-bottom: 1rpx solid #ddd; */
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}
.spot-box image{
  width: 168rpx;
  height: 168rpx;
}
.spot-box .info .title{
  font-size:30rpx;
  font-family: PingFangSC-Semibold;
  color: #333333;
  margin-bottom: 16rpx;
}
.spot-box .star-tag-box{
  padding: 5rpx 0rpx;
}
.spot-box .stars-box image{
  width:28rpx;
  height:28rpx;
}
.spot-box view.tag{
  padding: 0rpx;
  align-items:center;
}
.spot-box view .tag text{  
  display:inline-block;
  padding: 4rpx 12rpx;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-right: 8rpx;
}
.spot-box view .tag text.verify{
  background: #F2941B;
}
.spot-box view .tag text.game{
  background: #2D6BB4;
}
.spot-box view .tag text.activity{
  background: #EA651B;
}

.spot-box view .info-box{
  font-size: 26rpx;
  color: #787878;
  margin-top: 36rpx;
}