.swiper{
  position:relative;
}

.icon-box{
  margin-bottom: 24rpx;
  padding: 24rpx 0rpx 48rpx 0rpx;
  justify-content: center;
  border-bottom: 24rpx solid #F4F4F4;
}
.icon-box view{
  width: 370rpx;
  height: 149rpx;
  align-items:center;
  padding:0rpx 20rpx;
}
.icon-box view image{
  width: 100%;
  height: 100%;
}
.icon-box view text{
  font-size:24rpx;
  display:block;
}
.icon-box view text.title{
  font-size:32rpx;
}

.app-title{
  font-size:34rpx;
  margin:24rpx 0px;
}


.article-box{
  align-items:center;
  justify-content:space-between;
  width:100%;
  overflow:hidden;
  flex-wrap:wrap;
}
.article-box .article-info{
  margin-bottom:24rpx;
}
.article-box .article-info image{
  width:100%;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}
.article-box .article-info .meta{
   border: 1px solid #E9EDF4;
    border-top: none;
    margin-top: -6px;
    padding: 7px;
    box-shadow: 0px 0.175em 0.5em #02080a14, 0px 0.085em 0.175em #02080a00;
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}
.article-box .article-info .meta .title{
  font-size: 26rpx;
  margin:12rpx 0rpx;
}
.article-box .article-info .meta image{
  width: 40rpx;
  height:40rpx;
  margin-right:12rpx;
  border-radius:40rpx;
}
.article-box .article-info .meta .user-info{
  width:70%;
}
.article-box .article-info .meta text{
  font-size: 26rpx;
  max-width: 70%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}